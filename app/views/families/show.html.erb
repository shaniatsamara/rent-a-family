<div class="container mt-4">
  <div class="information">
    <div class="family-information">
      <% if @family.photo.key == nil %>
        <div></div>
      <% else %>
        <div class="family-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @family.photo.key, height: 300, width: 300, crop: :fill %>')">
        </div>
      <% end %>
      <% if current_user != @family.user %>
        <h4 class="book-this-family"><%= link_to "Book this family", new_family_booking_path(@family) %></h4>
      <% end %>
      <h5><%= @family.ethnicity %> Family</h5>
      <h1><%= @family.title %></h1>
      <h2>$<%= @family.price %> / day</h2>
      <h3>Location: <%= @family.location %></h3>
    </div>
    <div class="display-members">
      <ul>
        <li>ğŸ‘¨ <%= @family.adult_male %> Fathers </li>
        <li>ğŸ‘© <%= @family.adult_female %> Mothers </li>
        <li>ğŸ‘¦ <%= @family.child_male %> Sons </li>
        <li>ğŸ‘§ <%= @family.child_female %> Daughters </li>
        <li>ğŸ‘´ <%= @family.senior_male %> Grandfathers </li>
        <li>ğŸ‘µ <%= @family.senior_female %> Grandmothers </li>
      </ul>
    </div>
  </div>
  <div class="family-show-button">
    <button><%= link_to "See all families", families_path %></button>
    <% if current_user == @family.user %>
      <button><%= link_to "Edit this family", edit_family_path(@family) %></button>
      <button><%= link_to "Delete this family", family_path(@family), method: :delete %>
    <% end %>
  </div>

  <div class="review-container">
    <h3>See what other homemakers have said:</h3>
    <% if @family.reviews.empty? %>
      <p>There are no reviews yet.</p>
    <% end %>
    <% @family.reviews.each do |review| %>
      <div class="booking-card">
        <p><%= review.rating %> <i class="fas fa-heart"></i> </p>
        <p><%= review.comment %></p>
      </div>
    <% end %>
  </div>
</div>
