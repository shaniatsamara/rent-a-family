<div class="container">
  <h1>Create a new family</h1>
  <div class="form-family">
    <%= simple_form_for @family do |f| %>
    <%= f.input :title %>
    <%= f.input :ethnicity, collection: Family::ETHNICITY %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :price %>
    <%= f.input :adult_male, input_html: { min: '0', step: 'any' } %>
    <%= f.input :adult_female, input_html: { min: '0', step: 'any' } %>
    <%= f.input :child_male, input_html: { min: '0', step: 'any' } %>
    <%= f.input :child_female, input_html: { min: '0', step: 'any' } %>
    <%= f.input :senior_male, input_html: { min: '0', step: 'any' } %>
    <%= f.input :senior_female, input_html: { min: '0', step: 'any' } %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
    <% end %>
  </div>
</div>
