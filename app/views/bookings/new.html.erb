<div class="col-sm-8">
  <div class="row justify-content-center">
    <%= simple_form_for [@family, @booking] do |f| %>
      <% if @booking.errors[:user].length.positive? %>
        <p class="text-danger"><%= @booking.errors[:user][0] %></p>
      <% end %>
    <div class="form-inline">
        <%= f.input :start_date, html5: true %>
        <%= f.input :end_date, html5: true %>
    </div>
    <%= f.input :payment_method, collection: Booking::PAYMENT_METHODS %>
    <%= f.submit %>
    <% end %>
  </div>
</div>
